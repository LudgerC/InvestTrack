<Window x:Class="InvestTrack.Desktop.Views.Auth.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InvestTrack - Registreren"
        Height="510"
        Width="440"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F8F9FA">

    <Grid>
        <Border BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="8"
                Padding="24"
                Margin="20"
                Background="White"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">

            <StackPanel>
                <!-- Titel -->
                <TextBlock Text="Account Registratie"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#333"
                           Margin="0,0,0,20"
                           HorizontalAlignment="Center"/>

                <!-- Naam -->
                <StackPanel Margin="0,0,0,8">
                    <TextBlock Text="Volledige naam" Margin="0,0,0,4" FontWeight="SemiBold"/>
                    <TextBox x:Name="FullNameBox" Height="28" Padding="4" FontSize="14"/>
                </StackPanel>

                <!-- E-mail -->
                <StackPanel Margin="0,0,0,8">
                    <TextBlock Text="E-mail" Margin="0,0,0,4" FontWeight="SemiBold"/>
                    <TextBox x:Name="EmailBox" Height="28" Padding="4" FontSize="14"/>
                </StackPanel>

                <!-- Wachtwoord -->
                <StackPanel Margin="0,0,0,8">
                    <TextBlock Text="Wachtwoord" Margin="0,0,0,4" FontWeight="SemiBold"/>
                    <PasswordBox x:Name="PasswordBox" Height="28" Padding="4"/>
                </StackPanel>

                <!-- Bevestig wachtwoord -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Bevestig wachtwoord" Margin="0,0,0,4" FontWeight="SemiBold"/>
                    <PasswordBox x:Name="ConfirmPasswordBox" Height="28" Padding="4"/>
                </StackPanel>

                <!-- Registratieknop -->
                <Button Content="Registreren"
                        Width="140"
                        Height="34"
                        Background="#2E86DE"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="#2E86DE"
                        HorizontalAlignment="Center"
                        Cursor="Hand"
                        Click="Register_Click"/>

                <!-- Foutmelding -->
                <TextBlock x:Name="ErrorText"
                           Foreground="Red"
                           TextWrapping="Wrap"
                           Margin="0,12,0,0"
                           HorizontalAlignment="Center"
                           FontWeight="SemiBold"/>

                <!-- Terug naar login -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,20,0,0">
                    <TextBlock Text="Al een account? "/>
                    <TextBlock Text="Log hier in"
                               Foreground="#2E86DE"
                               Cursor="Hand"
                               FontWeight="Bold"
                               MouseLeftButtonDown="BackToLogin_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
