<Window x:Class="InvestTrack.Desktop.Views.TraderUser.AddTransactionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nieuwe Transactie"
        Height="300"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Transactietype" FontWeight="Bold" Margin="0,0,0,4"/>
            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                <RadioButton x:Name="DepositRadio" Content="Deposit" IsChecked="True" Margin="0,0,10,0"/>
                <RadioButton x:Name="WithdrawRadio" Content="Withdrawal"/>
            </StackPanel>

            <TextBlock Text="Bedrag" FontWeight="Bold" Margin="0,0,0,4"/>
            <TextBox x:Name="AmountBox" Height="28" Padding="4" Margin="0,0,0,12"/>

            <TextBlock Text="Opmerking (optioneel)" FontWeight="Bold" Margin="0,0,0,4"/>
            <TextBox x:Name="NoteBox" Height="28" Padding="4"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Annuleren" Width="100" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="Opslaan" Width="100" Background="#2E86DE" Foreground="White" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
