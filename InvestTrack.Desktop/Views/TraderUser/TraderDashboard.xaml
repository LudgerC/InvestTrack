<Window x:Class="InvestTrack.Desktop.Views.TraderUser.TraderDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InvestTrack - Trader Dashboard"
        Height="550"
        Width="820"
        WindowStartupLocation="CenterScreen"
        Background="#F4F6F8">

    <DockPanel>
        <!-- Header -->
        <Border DockPanel.Dock="Top"
                Background="#2E86DE"
                Padding="10">
            <TextBlock Text="InvestTrack - Trader Dashboard"
                       Foreground="White"
                       FontSize="20"
                       FontWeight="Bold"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Tabs -->
        <TabControl x:Name="MainTabs" Margin="12">
            <!-- Accounts Tab -->
            <TabItem Header="Accounts">
                <Grid>
                    <DataGrid x:Name="AccountsGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Margin="8">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Naam" Binding="{Binding Name}" Width="*" />
                            <DataGridTextColumn Header="Valuta" Binding="{Binding Currency}" Width="*" />
                            <DataGridTextColumn Header="Saldo" Binding="{Binding Balance}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Content="Account toevoegen"
                            Width="160" Height="32"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Margin="0,0,10,10"
                            Background="#2E86DE"
                            Foreground="White"
                            Click="AddAccount_Click"/>
                </Grid>
            </TabItem>

            <!-- Trades Tab -->
            <TabItem Header="Trades">
                <Grid>
                    <DataGrid x:Name="TradesGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Margin="8">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Instrument" Binding="{Binding Symbol}" Width="*" />
                            <DataGridTextColumn Header="Volume" Binding="{Binding Volume}" Width="*" />
                            <DataGridTextColumn Header="Winst/Verlies" Binding="{Binding Profit}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Favorieten Tab -->
            <TabItem Header="Favorieten">
                <ListBox x:Name="FavoritesList"
                         Margin="8"
                         DisplayMemberPath="Symbol"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
