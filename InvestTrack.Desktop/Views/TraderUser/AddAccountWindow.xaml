<Window x:Class="InvestTrack.Desktop.Views.TraderUser.AddAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nieuw Account"
        Height="300"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F8F9FA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Naam" FontWeight="Bold" Margin="0,0,0,4"/>
            <TextBox x:Name="NameBox" Height="28" Padding="4" Margin="0,0,0,12"/>

            <TextBlock Text="Valuta" FontWeight="Bold" Margin="0,0,0,4"/>
            <ComboBox x:Name="CurrencyBox" Height="28" Margin="0,0,0,12">
                <ComboBoxItem Content="EUR"/>
                <ComboBoxItem Content="USD"/>
                <ComboBoxItem Content="GBP"/>
                <ComboBoxItem Content="JPY"/>
                <ComboBoxItem Content="CHF"/>
            </ComboBox>

            <TextBlock Text="Beginsaldo" FontWeight="Bold" Margin="0,0,0,4"/>
            <TextBox x:Name="BalanceBox" Height="28" Padding="4"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Annuleren" Width="100" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="Opslaan" Width="100" Background="#2E86DE" Foreground="White" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
