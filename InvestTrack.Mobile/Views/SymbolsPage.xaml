<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:contracts="clr-namespace:InvestTrack.Model.Contracts;assembly=InvestTrack.Model"
    x:Class="InvestTrack.Mobile.Views.SymbolsPage"
    Title="Symbols">

    <Grid Padding="16" RowDefinitions="Auto,Auto,Auto,*" RowSpacing="12">

        <Label Grid.Row="0"
               Text="Symbols via API"
               FontSize="22"
               FontAttributes="Bold"/>

        <ActivityIndicator Grid.Row="1"
                           x:Name="Loading"
                           IsRunning="True"
                           IsVisible="True"/>

        <Label Grid.Row="2"
               x:Name="ErrorLabel"
               TextColor="Tomato"
               IsVisible="False" />

        <!-- Deze pakt de rest van de ruimte en is scrollbaar -->
        <CollectionView Grid.Row="3"
                        x:Name="SymbolsList">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="contracts:SymbolDto">
                    <Grid Padding="10" ColumnDefinitions="110,*,120">
                        <Label Text="{Binding Code}" FontAttributes="Bold" />
                        <Label Grid.Column="1" Text="{Binding DisplayName}" />
                        <Label Grid.Column="2" Text="{Binding Category}" HorizontalTextAlignment="End" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
