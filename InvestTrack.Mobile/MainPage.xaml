<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="InvestTrack.Mobile.MainPage"
    Title="Symbols">

    <VerticalStackLayout Padding="16" Spacing="12">
        <Label Text="Symbols (via API)" FontSize="20" FontAttributes="Bold" />

        <ActivityIndicator IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" />

        <CollectionView ItemsSource="{Binding Symbols}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout Padding="8">
                        <Label Text="{Binding Code}" FontAttributes="Bold" />
                        <Label Text="{Binding DisplayName}" FontSize="12" />
                        <Label Text="{Binding Category}" FontSize="12" />
                    </VerticalStackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
